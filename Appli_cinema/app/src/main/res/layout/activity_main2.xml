<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.e154817e.appli_cinma.Main2Activity"
    android:padding="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="494dp"
            android:weightSum="1"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="218dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="216dp"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="162dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@android:color/darker_gray"
                        android:id="@+id/Affiche" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1"
                        android:padding="5dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="22dp">

                            <TextView
                                android:text="Tags"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/tags"
                                android:textSize="12dip"
                                android:layout_weight="0.20" />

                            <TextView
                                android:text="Duree"
                                android:textSize="12dip"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/duree" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:text="Original"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16dip"
                                android:id="@+id/Original"
                                android:layout_below="@+id/Titre"
                                android:layout_alignParentStart="true" />

                            <TextView
                                android:text="Titre"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="20dip"
                                android:id="@+id/Titre"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentStart="true" />

                            <TextView
                                android:text="Realisateur"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15dip"
                                android:id="@+id/Realisateur"
                                android:layout_below="@+id/Original"
                                android:layout_alignParentStart="true" />

                            <TextView
                                android:text="Casting"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/Casting"
                                android:layout_weight="0.11"
                                android:textSize="13dip"
                                android:layout_below="@+id/textView"
                                android:layout_alignParentStart="true" />

                            <TextView
                                android:text="Casting :"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView"
                                android:layout_centerVertical="true"
                                android:layout_alignParentStart="true" />

                            <TextView
                                android:text="Date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/Date"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:layout_toEndOf="@+id/textView" />

                            <TextView
                                android:text="Sortie: "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView2"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentStart="true" />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="255dp">

                <RatingBar
                    android:id="@+id/Note"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:isIndicator="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:text="Résumé :"
                    android:layout_width="match_parent"
                    android:id="@+id/Resume_titre"
                    android:layout_height="40dp"
                    android:textSize="20dip"
                    android:padding="5dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/Note" />

                <TextView
                    android:text="Resume"
                    android:layout_width="match_parent"
                    android:id="@+id/Resume"
                    android:maxLines = "15"
                    android:scrollbars = "vertical"
                    android:padding="10dp"
                    android:textSize="15dip"
                    android:layout_height="180dp"
                    android:layout_below="@+id/Resume_titre"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
